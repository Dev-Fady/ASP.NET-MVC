@using Q3DotNetAssiut.ViewModel
@model EmpWithDeptListViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@* <form method="POST" action="/Employee/SaveEdit/@Model.MyEmployee.Id"> *@
<form method="POST" 
    asp-controller="Employee" 
    asp-action="SaveEdit" 
    asp-route-Id="@Model.MyEmployee.Id">
    <div>
        @* <label>Name</label> *@
        @* <input type="text" value="@Model.MyEmployee.Name" id="Name" name="Name" class="form form-control" /> *@
        @* @Html.TextBox("Name") *@
        @* @Html.LabelFor(x=>x.MyEmployee.Name) *@
        @* @Html.TextBoxFor(x=>x.MyEmployee.Name,new
        {
            name="Name",
        style="color:red",
        @class="form form-control"
        }) *@
        @* @Html.EditorFor(x => x.MyEmployee.Name, "Name","Name") *@
        <label asp-for="MyEmployee.Name"></label>
        <input class="form form-control" 
            asp-for="MyEmployee.Name" 
            name="Name"
            />
    </div>

    <div>                               
        <label>Address</label>          
        <input type="text" value="@Model.MyEmployee.Address" id="Address" name="Address" class="form form-control" />
    </div>                              
                                        
    <div>                               
        <label>ImageUrl</label>         
        <input type="text" value="@Model.MyEmployee.ImageUrl" id="ImageUrl" name="ImageUrl" class="form form-control" />
    </div>                              
   
    <div>
        <label>Salary</label>
        <input type="number" value="@Model.MyEmployee.Salary" id="Salary" name="Salary" class="form form-control" />
    </div>
    
    <div>
        <label>JopTitle</label>
        <input type="text" value="@Model.MyEmployee.JopTitle" id="JopTitle" name="JopTitle" class="form form-control" />
    </div>
    
    <div>
        <label>DepartmentId</label>
        @* <input type="number" value="@Model.MyEmployee.DepartmentId" id="DepartmentID" name="DepartmentID" class="form form-control" /> *@
        <select id="DepartmentId" name="DepartmentId" class="form form-control">
            @foreach (var deptItem in Model.DepartmentList)
            {
                if (Model.MyEmployee.DepartmentId == deptItem.Id)
                {
                    <option value="@deptItem.Id" selected>@deptItem.Name</option>
                }
                else
                {
                    <option value="@deptItem.Id">@deptItem.Name</option>

                }
            }

        </select>
    </div>
    <input type="submit" value="Save" class="btn btn-success" />

</form>

