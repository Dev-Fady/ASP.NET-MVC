@model Instructor

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="row g-0">
            <div class="col-md-4 d-flex align-items-center justify-content-center bg-light">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Url.Content("~/Images/" + Model.ImageUrl)"
                         class="img-fluid rounded"
                         alt="@Model.Name"
                         style="max-height: 300px;" />
                }
                else
                {
                    <span class="text-muted">No Image</span>
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title text-primary">@Model.Name</h3>
                    <p class="card-text"><strong>Address:</strong> @Model.Address</p>
                    <p class="card-text"><strong>Salary:</strong> $@Model.Salary</p>
                    <p class="card-text"><strong>Department:</strong> @Model.Department?.Name</p>
                    <p class="card-text"><strong>Course:</strong> @Model.Course?.Name</p>
                    <div class="mt-3">
                        <a asp-controller="Instructor"
                        asp-action="Edit" 
                        asp-route-id="@Model.Id" 
                        class="btn btn-warning me-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Instructor"
                        asp-action="Index" 
                        class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
