@model List<Department>
@{
    ViewData["Title"] = "Department All";
    Layout = "_AdvLayout";
}

<a href="/Department/Add" class="btn btn-success"> New </a>
<table class="table table-hover table-bordered">
    <tr>
        <th>No.</th>
        <th>Name</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
        </tr>
    }
</table>